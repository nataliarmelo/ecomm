{
  "openapi": "3.0.3",
  "info": {
    "title": "Ecomm API - Accounts",
    "description": "API developed for handling accounts.",
    "version": "1.0.0",
    "termsOfService": "http://localhost:3001",
    "contact": {
      "name": "Suport",
      "email": "contatosac@ecomm.com"
    },
    "license": {
      "name": "License GPLv3",
      "url": "http://www.gnu.org/licenses/gpl-3.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Accounts API"
    }
  ],
  "paths": {
    "/accounts": {
      "post": {
        "summary": "Account registration",
        "description": "Route for register accounts.",
        "tags": [
          "Accounts"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Accounts"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Accounts"
                },
                "examples": {
                  "accounts": {
                    "value": {
                      "id": "6548wff6a-58741fe",
                      "nome": "Jo√£o",
                      "email": "joao@mail.com",
                      "createdDate": "2022-12-29"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error creating account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/AccountError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Accounts": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "createdDate": {
            "type": "string"
          }
        }
      },
      "AccountError": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      }
    }
  }
}